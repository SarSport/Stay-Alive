<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SarSport\Bundle\ApplicationBundle\Entity\Application" table="sarsport_application">
        <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="teamName" type="string" column="team_name" length="50"/>
        <field name="firstPlayerName" type="string" column="first_player_name" length="150"/>
        <field name="firstPlayerPhonenumber" type="string" column="first_player_phonenumber" length="100"/>
        <field name="secondPlayerName" type="string" column="second_player_name" length="150" nullable="true"/>
        <field name="secondPlayerPhonenumber" type="string" column="second_player_phonenumber" length="100" nullable="true"/>
        <field name="comment" type="string" column="comment" length="255" nullable="true"/>
        <field name="additionalMaps" column="additional_maps" type="boolean" />
        <field name="tShirt" column="t_shirt" type="boolean" />
        <field name="raceName" type="string" column="race_name" length="255"/>

        <one-to-one field="user" target-entity="SarSport\Bundle\UserBundle\Entity\User">
            <join-column name="user_id" referenced-column-name="id" />
        </one-to-one>
        <lifecycle-callbacks/>
    </entity>

</doctrine-mapping>
